rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read anything (public app)
    allow read: if true;
    
    // Users - Only self-access for writes
    match /users/{uid} {
      allow read: if true;
      allow write: if request.auth.uid == uid;
    }
    
    // Rooms - Public read, anyone can update with RSVP/girlfriend name, only owner can delete
    match /rooms/{roomId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if true;  // Anyone can update (for RSVP and girlfriend name)
      allow delete: if request.auth.uid == resource.data.ownerUid;
    }
    
    // Memories - Public read, authenticated write
    match /memories/{docId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.ownerUid;
      allow delete: if request.auth.uid == resource.data.ownerUid;
    }
  }
}
